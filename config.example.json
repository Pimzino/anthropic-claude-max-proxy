{
  "server": {
    "port": 8081,
    "log_level": "info",
    "bind_address": "0.0.0.0"
  },
  "models": {
    "default": "claude-sonnet-4-0"
  },
  "api": {
    "_comment": "API endpoint: https://api.anthropic.com/v1/messages (no query params)",
    "_beta_features": "claude-code-20250219,interleaved-thinking-2025-05-14,fine-grained-tool-streaming-2025-05-14",
    "_note": "oauth-2025-04-20 NOT included - gates features not available to all Max users",
    "request_timeout": 600
  },
  "debug": {
    "stream_trace": {
      "enabled": false,
      "dir": "stream_traces",
      "max_bytes": 262144,
      "_note": "Enable to capture raw Anthropic/OpenAI stream chunks for debugging. Files may include sensitive content."
    }
  },
  "storage": {
    "token_file": "~/.anthropic-claude-max-proxy/tokens.json"
  }
}
